<body>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.12&appId=2021739128064615&autoLogAppEvents=1';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<h1>Bustle</h1>


<div class="card">
  <div class="imgcontainer">
    <img src="/images/users.jpg" alt="Avatar" class="avatar">
  </div>
  <div class="container">
    <h4><b>John Doe</b></h4> 
    <p>Not logged in</p> 
  </div>
</div>

<form action="/index" >
  <div class="container">
    <b class= "U-P">Username</b>
    <input type="text" placeholder="Enter Username" required>

    
    <p class="facebookLogin">
        Please login through Facebook
        <fb:login-button data-width="800px" scope="public_profile,email" onlogin="checkLoginState();" ><a href="login" style="text-decoration: none"></a>
        </fb:login-button>
    </p>





    <div class="fb-login-button" data-width="800px" data-max-rows="1" data-size="large" data-button-type="login_with" data-show-faces="false" data-auto-logout-link="true" data-use-continue-as="true" ></div>
    <b class= "U-P">Password</b>
    <input type="password" placeholder="Enter Password" required>
        
    <button type="submit" class="pad">Login</button>

    <input type="checkbox" checked="checked"> Remember me
  </div>

</form>

<script src="https://code.jquery.com/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/login.js"></script>
